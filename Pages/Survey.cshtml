@page
@model EncuestaRazor.Pages.SurveyModel

@{
    ViewData["Title"] = "Survey";
}

<form asp-page="Survey">
    <div class="text-center">
        <img src="~/img/elite2.jpg" asp-append-version="true"  width="256" alt="elite babe"/>
    </div>
    <div class="form-group">
        <label asp-for="Survey.Name"></label>
        <input class="form-control" asp-for="Survey.Name"/>
    </div>
    <div class="form-group">
        ¿Te gustaría realizar guardias en la oficina?<br />
        <div class="form-check">
            <input class="form-check-input" type="radio" id="respuestaSi" value="true" asp-for="Survey.Guards">
            <label class="form-check-label" for="respuestaSi">
                Sí
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" id="respuestaNo" value="false" asp-for="Survey.Guards">
            <label class="form-check-label" for="respuestaNo">
                No
            </label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Survey.Comments"></label>
        <textarea class="form-control" asp-for="Survey.Comments"></textarea>
    </div>
    <div class="text-center">
        <input type="submit" value="Enviar" class="btn btn-primary" />
    </div>
</form>